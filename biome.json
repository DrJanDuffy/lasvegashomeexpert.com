{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "node_modules/**",
      ".next/**",
      "out/**",
      "dist/**",
      "build/**",
      "*.min.js",
      "*.bundle.js",
      "package-lock.json",
      "pnpm-lock.yaml",
      "yarn.lock",
      ".vercel/**",
      "*.log",
      "coverage/**",
      ".nyc_output/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "ignore": ["*.min.js", "*.bundle.js", "dist/**", "build/**"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "error",
        "noUndeclaredVariables": "error",
        "noUnusedImports": "error",
        "noUnusedPrivateClassMembers": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "error",
        "noConsoleLog": "warn",
        "noDoubleEquals": "warn",
        "noEmptyInterface": "warn"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "error",
        "useShorthandArrayType": "error",
        "useBlockStatements": "error",
        "useShorthandAssign": "error",
        "useImportType": "error"
      },
      "complexity": {
        "noForEach": "warn",
        "useOptionalChain": "error"
      },
      "performance": {
        "noDelete": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "error",
        "useKeyWithMouseEvents": "error",
        "useMediaCaption": "warn",
        "useValidAriaProps": "warn",
        "useValidAriaValues": "warn"
      },
      "nursery": {
        "useImportRestrictions": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always",
      "jsxQuoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "overrides": [
    {
      "include": ["src/**/*.ts", "src/**/*.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "error",
            "useExhaustiveDependencies": "error"
          },
          "style": {
            "useImportType": "error"
          }
        }
      }
    },
    {
      "include": ["src/**/*.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useKeyWithClickEvents": "error",
            "useKeyWithMouseEvents": "error",
            "useValidAriaProps": "warn"
          }
        }
      }
    },
    {
      "include": ["*.config.js", "*.config.ts"],
      "formatter": {
        "lineWidth": 120
      }
    }
  ]
}
