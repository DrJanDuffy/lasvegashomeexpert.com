{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // Tailwind CSS IntelliSense Optimization
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript",
    "javascript": "javascript",
    "javascriptreact": "javascript",
    "html": "html",
    "css": "css"
  },

  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["classNames?\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["className\\s*=\\s*['\"`]([^'\"`]*)['\"`]", "([^'\"`]*)"],
    ["className\\s*=\\s*\\{([^}]*)\\}", "([^}]*)"],
    ["tw\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["tailwind\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  "tailwindCSS.suggestions": true,
  "tailwindCSS.validate": true,
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.lint.invalidTailwindDirective": "error",
  "tailwindCSS.lint.invalidVariant": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "warning",

  // Enhanced IntelliSense
  "tailwindCSS.emmetCompletions": true,

  // Autocomplete optimization
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggest.insertMode": "replace",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.showKeywords": true,
  "editor.suggest.showSnippets": true,
  "editor.suggest.showUsers": false,
  "editor.suggest.showWords": true,

  // CSS IntelliSense enhancement
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "css.lint.unknownAtRules": "ignore",

  // File watching for better IntelliSense
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },

  // Performance optimization
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  },

  // Tailwind specific performance
  "tailwindCSS.files.exclude": [
    "**/node_modules/**",
    "**/.git/**",
    "**/dist/**",
    "**/build/**",
    "**/.next/**"
  ],

  // GitLens â€” Git Supercharged Optimization
  "gitlens.codeLens.enabled": true,
  "gitlens.codeLens.scopes": {
    "document": true,
    "containers": true,
    "recentChanges": true,
    "uncommittedChanges": true
  },

  // GitLens Current Line
  "gitlens.currentLine.enabled": true,
  "gitlens.currentLine.scrollable": true,
  "gitlens.currentLine.details": "hovers",
  "gitlens.currentLine.visibility": "auto",

  // GitLens Hovers
  "gitlens.hovers.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.currentLine.delay": 1000,
  "gitlens.hovers.annotations.enabled": true,
  "gitlens.hovers.annotations.details": true,

  // GitLens File History
  "gitlens.fileHistory.enabled": true,
  "gitlens.fileHistory.followsRenames": true,
  "gitlens.fileHistory.showFilePicker": true,
  "gitlens.fileHistory.showInEditor": true,

  // GitLens Line History
  "gitlens.lineHistory.enabled": true,
  "gitlens.lineHistory.followsRenames": true,
  "gitlens.lineHistory.showFilePicker": true,
  "gitlens.lineHistory.showInEditor": true,

  // GitLens Blame
  "gitlens.blame.enabled": true,
  "gitlens.blame.avatars": true,
  "gitlens.blame.compact": false,
  "gitlens.blame.darkenUncommittedLines": true,
  "gitlens.blame.format": "${author}, ${agoOrDate}",
  "gitlens.blame.highlight": {
    "enabled": true,
    "format": "line"
  },

  // GitLens Side Bar
  "gitlens.views.repositories.files.layout": "tree",
  "gitlens.views.repositories.files.compact": false,
  "gitlens.views.repositories.files.showStatus": true,
  "gitlens.views.repositories.files.showStagedChanges": true,
  "gitlens.views.repositories.files.showWorkingChanges": true,

  // GitLens Commits
  "gitlens.views.commits.files.layout": "list",
  "gitlens.views.commits.files.compact": false,
  "gitlens.views.commits.files.showStatus": true,
  "gitlens.views.commits.files.showStagedChanges": true,
  "gitlens.views.commits.files.showWorkingChanges": true,

  // GitLens Search & Compare
  "gitlens.search.excludePatterns": [
    "**/node_modules/**",
    "**/.git/**",
    "**/dist/**",
    "**/build/**",
    "**/.next/**"
  ],
  "gitlens.search.showResultsInSideBar": true,
  "gitlens.search.showResultsInEditor": true,

  // GitLens Advanced Features
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": false
  },

  // GitLens Performance
  "gitlens.advanced.caching.enabled": true,
  "gitlens.advanced.caching.maxEntries": 1000,
  "gitlens.advanced.caching.maxSize": 50,
  "gitlens.advanced.caching.ttl": 300000,

  // GitLens Git Commands
  "gitlens.gitCommands.skipConfirmations": [
    "git:fetch",
    "git:pull",
    "git:push",
    "git:stage",
    "git:unstage"
  ],

  // GitLens Terminal Integration
  "gitlens.terminal.integrated.enabled": true,
  "gitlens.terminal.integrated.commands": [
    "git:add",
    "git:commit",
    "git:push",
    "git:pull",
    "git:fetch",
    "git:checkout",
    "git:branch",
    "git:merge",
    "git:rebase"
  ],

  // GitLens Keyboard Shortcuts
  "gitlens.keymap": "chorded",
  "gitlens.keymap.chorded": {
    "gitlens.showQuickCommitDetails": "ctrl+shift+g c",
    "gitlens.showQuickFileHistory": "ctrl+shift+g f",
    "gitlens.showQuickLineHistory": "ctrl+shift+g l",
    "gitlens.showQuickRepoStatus": "ctrl+shift+g s",
    "gitlens.showQuickStashList": "ctrl+shift+g t"
  },

  // GitLens Visualizations
  "gitlens.visualizations.enabled": true,
  "gitlens.visualizations.repositories.enabled": true,
  "gitlens.visualizations.fileHistory.enabled": true,
  "gitlens.visualizations.lineHistory.enabled": true,

  // GitLens Notifications
  "gitlens.notifications.enabled": true,
  "gitlens.notifications.showCommit": true,
  "gitlens.notifications.showFile": true,
  "gitlens.notifications.showLine": true,

  // GitLens Debugging
  "gitlens.debug.enabled": false,
  "gitlens.debug.verbose": false
}
